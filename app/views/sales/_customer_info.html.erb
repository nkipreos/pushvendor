<div class="row item_search_wrapper">
  <div class="col-sm-4">
    <h4 class="text-primary"><span class="glyphicon glyphicon-search"></span> Find</h4>
    <hr />
    <%= form_for :search, :url => url_for(:controller => "sales", :action => "update_customer_options", :format => :js), :method => "get", :remote => true do |f| %>
      <%= f.text_field :customer_name, :class => "form-control customer_search_input", :placeholder => "Search Customers" %>
      <%= f.hidden_field :sale_id, :value => @sale.id %>
      <%= submit_tag "search", :class => "btn btn-primary btn-lg customer_search" %>
    <% end %>
  </div>
  <div class="col-sm-8">
    <div class="searched_customers">
      <% unless @popular_customers.blank? %>
        <h4 class="text-primary"><span class="glyphicon glyphicon-tags"></span> Popular</h4>
        <hr />
        <div class="table-responsive">
          <table class="table table-striped table-bordered table-hover">
            <thead>
              <tr>
                <th>#</th>
                <th>Last Name</th>
                <th>First Name</th>
                <th>Phone Number</th>
                <th>Email Address</th>
              </tr>
            </thead>

            <tbody>
              <% for item in @popular_items %>
                <tr>
                  <td></td>
                  <td></td>
                  <td></td>
                  <td></td>
                  <td class="add_to_current_sale"><%= link_to url_for(:controller => 'sales', :action => 'create_customer_association', :item_id => item.id, :sale_id => params[:id], :quantity => 1), :remote => true do %><p><span class="glyphicon glyphicon-plus"></span></p><% end %></td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      <% end %>
    </div>
  </div>
</div>