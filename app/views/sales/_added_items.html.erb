<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
        <th>#</th>
        <th>Item</th>
        <th>Description</th>
        <th>Quantity</th>
        <th>Price</th>
      </tr>
    </thead>

    <tbody>

      <%= f.fields_for :items do |e| %>
        <tr>
          <td><%= e.text_field :sku, :class => "form-control", :placeholder => "SKU" %></td>
          <td><%= e.text_field :name, :class => "form-control", :placeholder => "Item" %></td>
          <td><%= e.text_field :description, :class => "form-control", :placeholder => "Description" %></td>
          <td><%= e.text_field :price, :class => "form-control", :placeholder => "Quantity" %></td>
          <td><%= e.text_field :price, :class => "form-control", :placeholder => "Price" %></td>
        </tr>
      <% end %>

     <!-- Added Items -->
      <% unless @sale.blank? %>
        <% unless @sale.get_sale_items.blank? %>
          <% for item in @sale.get_sale_items %>
            <tr>
              <td class="sku"><%= item.sku %></td>
              <td><%= item.name %></td>
              <td><%= item.description %></td>
              <td><%= item.stock_amount %></td>
              <td><%= item.price %></td>
            </tr>
          <% end %>
        <% end %>
      <% end %>


    </tbody>
  </table>
</div>