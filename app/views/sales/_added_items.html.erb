<div class="added_items">  
  <div class="table-responsive">
    <table class="table table-striped table-bordered table-hover">
      <thead>
        <tr>
          <th>#</th>
          <th>Item</th>
          <th>Description</th>
          <th>Price</th>
          <th>Quantity</th>
          <th>Total Price</th>
        </tr>
      </thead>

      <tbody>
        <%= form_for(@sale) do |f| %>
          <%= f.fields_for :items do |e| %>
            <tr>
              <td><%= e.text_field :sku, :class => "form-control", :placeholder => "SKU", :readonly => true %></td>
              <td><%= e.text_field :name, :class => "form-control", :placeholder => "Item", :readonly => true %></td>
              <td><%= e.text_field :description, :class => "form-control", :placeholder => "Description", :readonly => true %></td>
              <td><%= e.text_field :price, :class => "form-control", :placeholder => "Price" %></td>
              <td><input class="form-control" type="text" value="<%= LineItem.where(:sale_id => @sale.id, :item_id => e.object.id).first.quantity %>" placeholder="Quantity" readonly="readonly"><div class="glyphicon .glyphicon-circle-arrow-up"></div></td>
              <td><input class="form-control" type="text" value="<%= LineItem.where(:sale_id => @sale.id, :item_id => e.object.id).first.price %>" placeholder="Total Price" readonly="readonly"></td>
            </tr>
          <% end %>
        <% end %>

      </tbody>
    </table>
  </div>
</div>