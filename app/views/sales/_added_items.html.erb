<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
        <th>#</th>
        <th>Item</th>
        <th>Description</th>
        <th>Quantity</th>
        <th>Price</th>
      </tr>
    </thead>

    <tbody>

      

     <!-- Added Items -->
      <% unless @sale.blank? %>
        <% unless @sale.get_sale_items.blank? %>
          <% for item in @sale.get_sale_items %>
            <tr>
              <td class="sku"><%= item.sku %></td>
              <td><%= item.name %></td>
              <td><%= item.description %></td>
              <td><%= item.stock_amount %></td>
              <td><%= item.price %></td>
            </tr>
          <% end %>
        <% end %>
      <% end %>


    </tbody>
  </table>
</div>