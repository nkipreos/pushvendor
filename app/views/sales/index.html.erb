<div class="panel panel-default">
  <div class="panel-heading">Sales</div>
  <div class="table-responsive">
    <table class="table table-striped table-bordered table-hover">
      <thead>
        <tr>
          <th>#</th>
          <th>Customer</th>
          <th>Total</th>
          <th>Tax</th>
          <th>Paid</th>
          <th>Balance</th>
          <th></th>
        </tr>
      </thead>

      <tbody>
        <% @sales.each do |sale| %>
          <tr>
            <td><%= sale.id %></td>
            <td><%= sale.customer.blank? ? '-' : sale.customer.last_name %></td>
            <td><%= number_to_currency sale.total_amount %></td>
            <td><%= number_to_currency sale.tax %></td>
            <td><%= number_to_currency sale.paid_total %></td>
            <td><%= sale.remaining_balance == 0.00 ? "Paid" : "#{number_to_currency sale.remaining_balance}" %></td>
            <td><%= link_to 'Show', edit_sale_path(sale) %> | <%= link_to 'Destroy', sale, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <%= will_paginate @sales %>
  </div>
</div>

<br>


<%= link_to 'New Sale', new_sale_path, :class => "btn btn-success btn-lg active" %>
