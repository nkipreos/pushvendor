<div class="panel panel-default">
  <div class="panel-heading">#<span class="sale_id"><%= @sale.id %></span></div> 
    <div class="panel-body">
      
      <!-- Nav tabs -->
      <ul class="nav nav-tabs">
        <li class="active"><a href="#sale" data-toggle="tab">Sale</a></li>
        <li><a href="#customer" data-toggle="tab">Customer</a></li>
        <li><a href="#comments" data-toggle="tab">Comments</a></li>
      </ul>

      <!-- Tab panes -->
      <div class="tab-content">
        <div class="tab-pane active" id="sale">
          <div class="row item_search_wrapper">
            <div class="col-sm-4">
              <h4 class="text-primary"><span class="glyphicon glyphicon-search"></span> Find</h4>
              <hr />
              <%= form_for :search, :url => url_for(:controller => "sales", :action => "update_line_item_options", :format => :js), :method => "get", :remote => true do |f| %>
                <%= f.text_field :item_name, :class => "form-control item_search_input", :placeholder => "Search Items" %>
                <%= f.hidden_field :sale_id, :value => @sale.id %>
                <%= submit_tag "search", :class => "btn btn-primary btn-lg item_search" %>
              <% end %>
              <p>or</p>
              <button class="btn" data-toggle="modal" data-target="#customItem">
                Create Custom Item
              </button> 
            </div>
            <div class="col-sm-8">
              <div class="searched_items">
                <% unless @popular_items.blank? %>
                  <h4 class="text-primary"><span class="glyphicon glyphicon-tags"></span> Popular</h4>
                  <hr />
                  <div class="table-responsive">
                    <table class="table table-striped table-bordered table-hover">
                      <thead>
                        <tr>
                          <th>#</th>
                          <th>Item</th>
                          <th>Description</th>
                          <th>Price</th>
                          <th>Add</th>
                        </tr>
                      </thead>

                      <tbody>
                        <% for item in @popular_items %>
                          <tr>
                            <td><%= item.sku %></td>
                            <td><%= item.name %></td>
                            <td><%= item.description %></td>
                            <td><%= item.price %></td>
                            <td class="add_to_current_sale"><%= link_to url_for(:controller => 'sales', :action => 'create_line_item', :item_id => item.id, :sale_id => @sale.id, :quantity => 1), :remote => true do %><p><span class="glyphicon glyphicon-plus"></span></p><% end %></td>
                          </tr>
                        <% end %>
                      </tbody>
                    </table>
                  </div>
                <% end %>
              </div>
            </div>
          </div>


            <%= form_for(@sale) do |f| %>
              <% if @sale.errors.any? %>
                <div id="error_explanation">
                  <div class="panel panel-danger">
                    <div class="panel-heading">
                      <h2><%= pluralize(@sale.errors.count, "error") %> prohibited this sale from being saved:</h2>
                    </div>
                    <div class="panel-body">
                      <ul>
                      <% @sale.errors.full_messages.each do |msg| %>
                        <li><%= msg %></li>
                      <% end %>
                      </ul>
                    </div>
                  </div>
                </div>
              <% end %>

              <h4 class="text-primary"><span class="glyphicon glyphicon-tags"></span> Items</h4>
              <hr />
              <div class="added_items">
                <%= render :partial => 'sales/shared/added_items', :locals=>{:f=>f} %>
              </div>

              <div class="row">
                <div class="sale_totals col-sm-4">
                  <%= render :partial => 'sales/shared/sale_totals', :locals=>{:f=>f} %>
                </div>
                <div class="sale_payments col-sm-8">
                  <%= render :partial => 'sales/shared/sale_payments', :locals => {:f => f} %>
                </div>  
              </div>       
          </div>

          <%= f.submit 'Update Sale', :class => "btn btn-success btn-lg sale_submit" %>
        <% end %>
        
        <div class="tab-pane" id="customer">
          <%= render :partial => 'sales/shared/customer_info', :object => @sale %>

          <div class="added_customer">
            <%= render :partial => 'sales/shared/added_customer' %>
          </div>
        </div>

        <div class="tab-pane" id="comments">
          <%= render :partial => 'sales/shared/comments', :object => @sale %>
        </div>


        <!-- Modal -->
        <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
          <div class="modal-dialog">
            <div class="modal-content">
              <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title" id="myModalLabel">Payment Options</h4>
              </div>
              <div class="modal-body">
                <div class="make_payment">
                  <%= render :partial => 'sales/shared/payment' %>
                </div>
              </div>
              <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
              </div>
            </div><!-- /.modal-content -->
          </div><!-- /.modal-dialog -->
        </div><!-- /.modal -->

        <!-- Modal -->
        <div class="modal fade" id="customItem" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
          <div class="modal-dialog">
            <div class="modal-content">
              <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title" id="myModalLabel">Custom Item Details</h4>
              </div>
              <div class="modal-body">
                <div class="create_an_item">
                  <%= form_for :custom_item, :url => url_for(:controller => "sales", :action => "create_custom_item", :sale_id => @sale.id, :format => :js), :method => "get", :remote => true do |f| %>
                  
                          <div class="form-group">
                            <label>Name</label>
                            <%= f.text_field :name, :class => "form-control", :placeholder => "Name" %>
                          </div>
                          <div class="form-group">
                            <label>Description</label>
                            <%= f.text_area :description, :class => "form-control", :placeholder => "Description" %>
                          </div>
                          <div class="form-group">
                            <label>Price</label>
                            <%= f.text_field :price, :class => "form-control", :placeholder => "Price" %>
                          </div>
                          <div class="form-group">
                            <label>Quantity</label>
                            <%= f.text_field :stock_amount, :class => "form-control", :placeholder => "Quantity" %>
                          </div>
                          <div class="form-group"><%= f.submit 'Add Item', :class => "btn close_custom_modal" %></div>
                        
                  <% end %>
                </div>
              </div>
              <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
              </div>
            </div><!-- /.modal-content -->
          </div><!-- /.modal-dialog -->
        </div><!-- /.modal -->
      </div>

      <!-- Modal -->
        <div class="modal fade" id="customCustomer" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
          <div class="modal-dialog">
            <div class="modal-content">
              <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title" id="myModalLabel">Customer Details</h4>
              </div>
              <div class="modal-body">
                <div class="create_an_item">
                  <%= form_for :custom_customer, :url => url_for(:controller => "sales", :action => "create_custom_customer", :sale_id => @sale.id, :format => :js), :method => "get", :remote => true do |f| %>
                  
                          <div class="form-group">
                            <label>First Name</label>
                            <%= f.text_field :first_name, :class => "form-control", :placeholder => "First Name" %>
                          </div>
                          <div class="form-group">
                            <label>Last Name</label>
                            <%= f.text_field :last_name, :class => "form-control", :placeholder => "Last Name" %>
                          </div>
                          <div class="form-group">
                            <label>Email Address</label>
                            <%= f.text_field :email_address, :class => "form-control", :placeholder => "example@example.com" %>
                          </div>
                          <div class="form-group">
                            <label>Phone</label>
                            <%= f.text_field :phone_number, :class => "form-control", :placeholder => "000 - 000 - 00000" %>
                          </div>
                          <div class="form-group">
                            <label>Address</label>
                            <%= f.text_field :address, :class => "form-control", :placeholder => "Address" %>
                          </div>
                          <div class="form-group">
                            <label>City</label>
                            <%= f.text_field :city, :class => "form-control", :placeholder => "City" %>
                          </div>
                          <div class="form-group">
                            <label>State</label>
                            <%= f.text_field :state, :class => "form-control", :placeholder => "State" %>
                          </div>
                          <div class="form-group">
                            <label>Zip</label>
                            <%= f.text_field :zip, :class => "form-control", :placeholder => "Zip" %>
                          </div>
                          <div class="form-group"><%= f.submit 'Add Customer', :class => "btn close_custom_modal" %></div>
                        
                  <% end %>
                </div>
              </div>
              <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
              </div>
            </div><!-- /.modal-content -->
          </div><!-- /.modal-dialog -->
        </div><!-- /.modal -->
      </div>
      
    </div>
  </div>
</div>
