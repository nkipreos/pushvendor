<div class="make_payment">
	<h4 class="text-primary"><span class="glyphicon glyphicon-usd"></span> Add a payment</h4>
	<hr />
	<%= form_for :payments, :url => url_for(:controller => "payments", :action => "make_payment"), :method => "get", :remote => true do |f| %>
	<%= f.select :payment_type, [['Credit Card', 'credit_card'], ['Cash', 'cash'], ['Check', 'check'], ['Other', 'other']], {}, { :class => "form-control" } %>
	<%= f.text_field :amount, :class => "form-control", :placeholder => "Amount" %>
	<%= f.hidden_field :sale_id, :value => @sale.id %>
	<%= submit_tag "Submit Payment", :class => "btn btn-primary btn-lg" %>
	<% end %>
</div>