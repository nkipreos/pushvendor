<div class="panel panel-default">
    <div class="table-responsive">
      <table class="table table-striped table-bordered table-hover">
        <thead>
          <tr>
            <th>Expense</th>
            <th>Amount</th>
            <th>Date</th>
            <th>Made by</th>
            <th>Actions</th>
          </tr>
        </thead>

        <tbody>
          <% @expenses.each do |expense| %>
	   <tr class='success'>
              <td><%= expense.name %></td>
              <td><%= expense.amount %></td>
              <td><%= expense.created_at %></td>
              <td><%= expense.money_source.try(:name) %></td>
              <td><%= link_to 'Show', edit_expense_path(expense) %> | <%= link_to 'Destroy', expense, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <div class="panel-body">
        <%= will_paginate @expenses, renderer: BootstrapPagination::Rails %>
      </div>
    </div>
  </div>
</div>

    <div class="col-sm-12">
      <%= link_to 'New Expense', new_expense_path, :class => "btn btn-success btn-lg active" %>
    </div>
