<div class="panel panel-default">
    <div class="table-responsive">
      <table class="table table-striped table-bordered table-hover">
        <thead>
          <tr>
            <th>Company Name</th>
            <th>Tax ID</th>
            <th>Name</th>
            <th>Lastname</th>
            <th>Email</th>
            <th>Edit</th>
          </tr>
        </thead>

        <tbody>
          <% @suppliers.each do |supplier| %>
            <tr class='success'>
              <td><%= supplier.company_name %></td>
              <td><%= supplier.tax_id %></td>
              <td><%= supplier.name %></td>
              <td><%= supplier.lastname %></td>
              <td><%= supplier.email %></td>
              <td><%= link_to 'Show', edit_expense_path(expense) %> | <%= link_to 'Destroy', expense, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <div class="panel-body">
        <%= will_paginate @expenses, renderer: BootstrapPagination::Rails %>
      </div>
    </div>
  </div>
</div>

<div class="col-sm-12">
  <%= link_to 'New Supplier', new_supplier_path, :class => "btn btn-success btn-lg active" %>
</div>
