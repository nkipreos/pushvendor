<%= form_for(@supplier) do |f| %>
  <%= render :partial => 'template/form_errors', :object => @supplier %>

<div class="panel panel-default">
  <div class="panel-body">

   
    <div class="row">
      <div class="col-sm-6 col-sm-offset-3">
        <div class="form-group">
          <label>Company Name</label>
          <%= f.text_field :company_name, :class => "form-control", :placeholder => "Company Name" %>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-sm-6 col-sm-offset-3">
        <div class="form-group">
          <label>Address</label>
          <%= f.text_field :address, :class => "form-control", :placeholder => "Address" %>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-sm-6 col-sm-offset-3">
        <div class="form-group">
          <label>Activity</label>
          <%= f.text_field :activity, :class => "form-control", :placeholder => "Activity" %>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-sm-6 col-sm-offset-3">
        <div class="form-group">
          <label>Tax ID</label>
          <%= f.text_field :tax_id, :class => "form-control", :placeholder => "Tax ID" %>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-sm-6 col-sm-offset-3">
        <div class="form-group">
          <label>Phone (Optional)</label>
          <%= f.text_field :phone, :class => "form-control", :placeholder => "Phone" %>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-sm-6 col-sm-offset-3">
        <div class="form-group">
          <label>Contact Name</label>
          <%= f.text_field :name, :class => "form-control", :placeholder => "Contact Name" %>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-sm-6 col-sm-offset-3">
        <div class="form-group">
          <label>Lastname</label>
          <%= f.text_field :lastname, :class => "form-control", :placeholder => "Lastname" %>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-sm-6 col-sm-offset-3">
        <div class="form-group">
          <label>Email</label>
          <%= f.email_field :email, :class => "form-control", :placeholder => "Email" %>
        </div>
      </div>
    </div>

    
    </div>
  </div>
</div>

<div class="row">
  <div class="col-sm-12">
    <%= f.submit 'Update Expense', :class => "btn btn-success btn-lg" %>
  </div>
</div>
<% end %>