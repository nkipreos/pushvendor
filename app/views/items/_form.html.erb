<%= form_for(@item) do |f| %>
  <% if @item.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@item.errors.count, "error") %> prohibited this item from being saved:</h2>

      <ul>
      <% @item.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<div class="panel panel-default">
  <div class="panel-body">

    <% unless @categories.blank? %>
      <div class="row">
        <div class="col-sm-6">
          <div class="form-group">
            <label>Category</label>
            <%= f.select :item_category_id, @categories.map { |cat| [cat.name, cat.id] }, :include_blank => true, :class => "form-control", :placeholder => "Item Sku" %>
          </div>
        </div>
      </div>
    <% end %>

    <div class="row">
      <div class="col-sm-6">
        <div class="form-group">
          <label>SKU</label>
          <%= f.text_field :sku, :class => "form-control", :placeholder => "Item Sku" %>
        </div>
      </div>
      <div class="col-sm-6">
        <div class="form-group">
          <label>Name of Item</label>
          <%= f.text_field :name, :class => "form-control", :placeholder => "Item Name" %>
        </div>
      </div>
    </div>

    <div class="row">
      <div class="col-sm-6">
        <div class="form-group">
          <label>Price</label>
          <%= f.text_field :price, :class => "form-control", :placeholder => "Item Price" %>
        </div>
      </div>
      <div class="col-sm-6">
        <div class="form-group">
          <label>Stock Amount</label>
          <%= f.text_field :stock_amount, :class => "form-control", :placeholder => "Amount in Stock" %>
        </div>
      </div>
    </div>

    <div class="row">
      <div class="col-sm-6">
        <div class="form-group">
          <label>Cost Price</label>
          <%= f.text_field :cost_price, :class => "form-control", :placeholder => "Cost of Item" %>
        </div>
      </div>
      <div class="col-sm-6">
        <div class="form-group">
          <label>Description</label>
          <%= f.text_area :description, :class => "form-control", :placeholder => "Item Description" %>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-sm-12">
    <%= f.submit 'Update Item', :class => "btn btn-success btn-lg" %>
  </div>
</div>
<% end %>
