<div class="panel panel-default">
  <div class="panel-heading">New Customer Details</div>
  <div class="panel-body">
  <%= form_for(@customer) do |f| %>
    <% if @customer.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@customer.errors.count, "error") %> prohibited this customer from being saved:</h2>

        <ul>
          <% @customer.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

      <div class="row">
        <div class="col-sm-6">
          <label>First Name</label>
          <%= f.text_field :first_name, :class => "form-control", :placeholder => "First Name" %>
        </div>
        <div class="col-sm-6">
          <label>Last Name</label>
          <%= f.text_field :last_name, :class => "form-control", :placeholder => "Last Name" %>
        </div>
      </div>

      <%= f.fields_for :contacts do |e| %>
        <div class="row">
          <div class="col-sm-6">
            <label>Phone Number</label>
            <%= e.text_field :phone_number, :class => "form-control", :placeholder => "Phone Number" %>
          </div>
          <div class="col-sm-6">
            <label>Email Address</label>
            <%= e.text_field :email_address, :class => "form-control", :id =>  "exampleInputEmail1", :placeholder => "Email Address" %>
          </div>
        </div>
        <div class="row">
          <div class="col-sm-6">
            <label>Address</label>
            <%= e.text_field :address, :class => "form-control", :placeholder => "Address" %>
          </div>
          <div class="col-sm-6">
            <label>City</label>
            <%= e.text_field :city, :class => "form-control", :placeholder => "City" %>
          </div>
        </div>
        <div class="row">
          <div class="col-sm-6">
            <label>State</label>
            <%= e.text_field :state, :class => "form-control", :placeholder => "State" %>
          </div>
          <div class="col-sm-6">
            <label>Zip</label>
            <%= e.text_field :zip, :class => "form-control", :placeholder => "Zip" %>
          </div>
        </div>
      <% end %>

      <%= f.submit 'Update Sale', :class => "btn btn-primary btn-lg" %>
    <% end %>
  </div>
</div>  
