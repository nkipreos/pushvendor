<% else %>
	<div class="container">
  
      <%= form_for("user", :url => user_session_path, :html => { :class => "form-signin" }) do |f| %>
      	<h2 class="form-signin-heading">PushVendor</h2>
	      <%= f.text_field :email, :class => 'form-control', :placeholder => 'Email Address' %>
	      <%= f.password_field :password, :class => 'form-control', :placeholder => 'Password' %>
	      <label class="checkbox">
	      	<%= f.check_box :remember_me %> Remember me
	      </label>
	      <%= link_to "Forgot your password?", new_password_path('user') %>
	      <button class="btn btn-lg btn-primary btn-block" type="submit">Sign in</button>
	      <p class="copyright">Copyright &copy; 2013 PushVendor</p>
	    <% end %>

    </div>
<% end %>