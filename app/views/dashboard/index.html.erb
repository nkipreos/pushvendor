	  <!-- Default panel contents -->
	  <div class="panel-heading">Dashboard</div>
	  <div class="panel-body">
	    <p></p>
	  </div>

	  <!-- Table -->
	  <table class="table col-sm-6">
	    
	  </table>
	</div>

	<div class="panel panel-default col-sm-6">
	  <!-- Default panel contents -->
	  <div class="panel-heading">Recent Sales</div>
	  <div class="panel-body">
	    <p></p>
	  </div>

	  <!-- Table -->
	  <table class="table col-sm-6">
	    
	  </table>
	</div>

	<div class="panel panel-default col-sm-6">
